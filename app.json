{
  "expo": {
    "name": "Metanet",
    "slug": "metanet-mobile",
    "version": "0.2.3",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "metanet",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "imageWidth": 1179,
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ],
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#ffffff",
          "defaultChannel": "default"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "useModularHeaders": true
          }
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "$(PRODUCT_NAME) needs access to your Camera to scan QR codes and barcodes.",
          "enableCodeScanner": true
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to scan barcodes."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "f18a56d2-60e6-4170-95ca-839868f329fa"
      },
      "useFirebase": false
    },
    "android": {
      "package": "org.bsvblockchain.metanet",
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.INTERNET",
        "android.permission.SYSTEM_ALERT_WINDOW",
        "android.permission.CAMERA"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https"
            },
            {
              "scheme": "http"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        },
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "metanet"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "queries": [
        {
          "intent": {
            "action": "android.intent.action.VIEW",
            "category": "android.intent.category.BROWSABLE",
            "data": {
              "scheme": "https"
            }
          }
        },
        {
          "intent": {
            "action": "android.intent.action.VIEW",
            "category": "android.intent.category.BROWSABLE",
            "data": {
              "scheme": "http"
            }
          }
        }
      ],
      "jsEngine": "hermes"
    },
    "ios": {
      "bundleIdentifier": "org.bsvblockchain.metanet",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to scan QR codes and barcodes.",
        "NSPhotoLibraryUsageDescription": "This app needs photo library access to let you select images.",
        "NSMicrophoneUsageDescription": "This app needs microphone access for video recording features.",
        "NSFaceIDUsageDescription": "This app uses Face ID/Touch ID to securely authenticate you and protect your wallet.",
        "ITSAppUsesNonExemptEncryption": false,
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "org.bsvblockchain.metanet.urlscheme",
            "CFBundleURLSchemes": ["metanet", "http", "https"]
          }
        ],
        "LSApplicationQueriesSchemes": ["https", "http"]
      },
      "entitlements": {
        "aps-environment": "development",
        "com.apple.developer.associated-domains": ["applinks:*"]
      }
    },
    "notification": {
      "icon": "./assets/images/notification-icon.png",
      "color": "#000000",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "#{unread_notifications} new interactions"
    },
    "reactNativeConfig": {
      "enableHermes": true,
      "enableFabricRenderer": false
    },
    "owner": "bsvb"
  }
}
