    "expo-web-browser": "~15.0.9",
    "fuse.js": "^7.1.0",
    "i18next": "^25.2.1",
    "idb": "^8.0.3",
    "mobx": "^6.13.7",
    "mobx-react-lite": "^4.1.0",
    "prettier": "^3.2.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "^15.5.3",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
